<Page x:Class="EyeTracker.MVVM.View.ClassManageUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EyeTracker.MVVM.View"
      xmlns:Comp="clr-namespace:EyeTracker.CustomComponents"
      mc:Ignorable="d" 
      d:DesignHeight="280" d:DesignWidth="650"
      Background="LightGray"
      Title="ClassManageUI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.25*"/>
            <ColumnDefinition Width="0.75*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" Margin="0,0,5,0">
            <WrapPanel x:Name="ClassWrp"/>
        </ScrollViewer>
        <Comp:ClassInfo Grid.Column="1" x:Name="ClassInfo"/>
        <Comp:ChangingClassView Grid.Column="1" 
                               x:Name="ClassChange" 
                               IsEnabled="False" 
                               Visibility="Hidden"/>
    </Grid>
</Page>
